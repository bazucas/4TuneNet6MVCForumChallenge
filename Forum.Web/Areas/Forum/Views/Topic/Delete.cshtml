@model Forum.Web.ViewModels.TopicVm

<form id="deleteForm" method="post" asp-action="Delete">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Topic</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control"/>
        </div>
        <button type="submit" onclick="return showWarningModal()" class="btn btn-danger" style="width: 150px">Delete</button>
        <a asp-controller="Forum" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back to Forum</a>
    </div>
</form>

@section Scripts {
    <script type="text/javascript">
        function showWarningModal() {
            Swal.fire({
                title: 'Do you want to delete this topic?',
                showDenyButton: false,
                showCancelButton: true,
                confirmButtonText: 'Delete'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('deleteForm').submit();
                }
            });
            return false;
        }
    </script>
}


