@model IEnumerable<Forum.Web.ViewModels.TopicVm>

<h2>Topics</h2>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>Category Name</th>
        <th>Display Order</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td width="10%">@obj.Title</td>
            <td width="70%">@obj.Description</td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a class="btn btn-primary mx-2" asp-controller="Topic" asp-action="Index" asp-route-topicId="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a class="btn btn-danger mx-2" asp-controller="Topic" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i>Delete</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>